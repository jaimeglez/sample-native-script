  <scroll-view>
    <StackLayout>
      <grid-layout rows="auto, auto">
        <text-field id="unit-name" text="{{ name }}" hint="Unidad" returnKeyType="done" row="1" />
      </grid-layout>
      <grid-layout rows="auto, auto">
        <text-field id="remote-id" text="{{ remoteId }}" hint="ID" returnKeyType="done" row="1" editable="false"/>
      </grid-layout>
      <button text="Guardar" tap="saveUnit" />
